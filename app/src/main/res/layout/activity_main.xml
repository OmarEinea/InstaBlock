<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eineao.instablock.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/blocked_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"/>

    <View
        android:visibility="invisible"
        android:id="@+id/fab_shade"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/lightTransparent"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_menu"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:fab_addButtonColorNormal="@color/colorPrimary"
        app:fab_addButtonColorPressed="@color/colorPrimaryDark"
        app:fab_addButtonPlusIconColor="@android:color/white"
        app:fab_labelStyle="@style/fab_labels_style"
        app:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/play_store_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_title="From Play Store"
            app:fab_icon="@drawable/ic_google_play"
            app:fab_colorNormal="@color/lightGrey"
            app:fab_colorPressed="@color/grey"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/installed_apps_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_title="From Installed Apps"
            app:fab_icon="@drawable/ic_installed_apps"
            app:fab_colorNormal="@color/lightGrey"
            app:fab_colorPressed="@color/grey"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_title="Using Package Name"
            app:fab_icon="@drawable/ic_package_name"
            app:fab_colorNormal="@color/lightGrey"
            app:fab_colorPressed="@color/grey"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
